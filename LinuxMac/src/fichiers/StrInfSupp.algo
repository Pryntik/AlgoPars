ALGORITHME StrInfSupp
constante:
  cons : entier
variables:
  choix : caractère
  val, nbAction : entier
DEBUT
  écrire ( "valeur initiale :")
  lire ( nbAction )
  val <-- 0

  écrire ( "action (Q/I/D):")
  lire ( choix )
  tq nbAction < 3 faire

      si val > 2 alors
          val <-- val + 1
      sinon
          lire ( val )
      fsi

      nbAction <-- nbAction + 1

      écrire ( "action (Q/I/D):")
      lire ( choix )

  ftq

  écrire ( val )
  écrire ( nbAction )
FIN